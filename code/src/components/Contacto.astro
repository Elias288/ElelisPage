---
import github_logo from "@assets/github-logo.svg?raw";
import linkedin_logo from "@assets/linkedin.svg?raw";
import gmail from "@assets/gmail.svg?raw";
---

<ul class="social-links">
  <li>
    <a href="https://github.com/Elias288" target="_blank">
      <Fragment set:html={github_logo} />
      GitHub
    </a>
  </li>
  <li>
    <a
      href="https://www.linkedin.com/in/elias-bianchi-3a5012183/"
      target="_blank"
    >
      <Fragment set:html={linkedin_logo} />
      LinkedIn
    </a>
  </li>
  <li>
    <a href="mailto:bianchi.elias@gmail.com">
      <Fragment set:html={gmail} />
      bianchi.elias@gmail.com
    </a>
  </li>
</ul>

<style>
  .social-links {
    list-style: none;
    margin: 0;

    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 10px;
  }

  .social-links li {
    margin: 0;
    padding: 0;
  }

  .social-links a {
    color: #fff;
    text-decoration: none;
    font-size: 1.1rem;
    transition: color 0.3s ease;

    display: flex;
    align-items: center;
    gap: 10px;

    background-color: rgba(255, 255, 255, 0.05);
    padding: 0.5rem 1rem;
    text-align: center;
    border-radius: 10px;
    transition: transform 0.3s;
  }
  .social-links a:hover {
    transform: translateY(-3px);
    background: rgba(91, 192, 248, 0.15);
    color: #4db6ff;
  }
  :global(.social-links a:hover svg) {
    color: rgb(255 255 255 / 70%);
  }

  :global(.social-links svg) {
    width: 30px;
    height: 30px;
  }
</style>
