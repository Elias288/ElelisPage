      <div class="skill">
        <img src={css.src} width="40px" height="40px" />CSS
      </div>
      <div class="skill">
        <img src={javascript.src} width="40px" height="40px" />JavaScript
      </div>
      <div class="skill">
        <img src={typescript.src} width="40px" height="40px" />Typescript
      </div>
      <div class="skill">
        <img src={bash.src} width="40px" height="40px" />Bash
      </div>
      <div class="skill">
        <img src={python.src} width="40px" height="40px" />Python
      </div>
      <div class="skill">
        <img src={java.src} width="40px" height="40px" />JAVA
      </div>
      <div class="skill">
        <img src={lua.src} width="40px" height="40px" />LUA
      </div>
      <div class="skill">
        <img src={cplusplus.src} width="40px" height="40px" />C++
      </div>
      <div class="skill">
        <img src={cSharp.src} width="40px" height="40px" />C#
      </div>
      <div class="skill"><img src={c3.src} width="40px" height="40px" />C</div>
      <div class="skill">
        <img src={php.src} width="40px" height="40px" />PHP
