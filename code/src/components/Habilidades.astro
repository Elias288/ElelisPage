    <h3>Frameworks</h3>
    <!-- Frameworks -->
    <div class="skills">
      <div class="skill">
        <img src={nodejs.src} width="40px" height="40px" />Node.js
      </div>
      <div class="skill">
        <img src={react.src} width="40px" height="40px" />React
      </div>
      <div class="skill">
        <img src={astro.src} width="40px" height="40px" />Astro
      </div>
      <div class="skill">
        <img src={nextjs.src} width="40px" height="40px" />Next.js
      </div>
      <div class="skill">
        <img src={nestjs.src} width="40px" height="40px" />NestJs
      </div>
      <div class="skill">
        <img src={dart.src} width="40px" height="40px" />Dart
      </div>
      <div class="skill">
        <img src={androd.src} width="40px" height="40px" />Android
      </div>
      <div class="skill">
        <img src={angular.src} width="40px" height="40px" />Angular
      </div>
    </div>

    <h3>Tecnologías</h3>
    <!-- Tecnologías -->
    <div class="skills">
      <div class="skill">
        <img src={git.src} width="40px" height="40px" />Git
      </div>
      <div class="skill">
        <img src={github.src} width="40px" height="40px" />Github
      </div>
      <div class="skill">
