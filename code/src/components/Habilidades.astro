      <div class="skill">
        <img src={mongoDB.src} width="40px" height="40px" />MongoDB
      </div>
    </div>
  </div>
</section>

<style>
  .skills {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
    margin-top: 2rem;
  }

  .skill {
    user-select: none;
    background: rgba(255, 255, 255, 0.05);
    padding: 1rem;
    text-align: center;
    border-radius: 10px;
    transition: transform 0.3s;
    font-size: 0.9rem;

    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }

  .skill:hover {
    transform: translateY(-3px);
    background: rgba(91, 192, 248, 0.15);
  }

  h3 {
    margin-top: 3rem;
  }

  @media screen and (min-width: 600px) {
    .skills {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (min-width: 992px) {
    .skills {
      grid-template-columns: repeat(6, 1fr);
      margin-top: 0.5rem;
    }
    h3 {
      margin-top: 0.5rem;
    }
    .skill {
      padding: 10px;
    }
  }
</style>
