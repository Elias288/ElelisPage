---
import GlobalStyles from "src/GlobalStyles.astro";
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import config from "@utils/page_config";
import Background from "./Background.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href=`${config.basePage}/favicon.svg`
    />
    <meta name="generator" content={Astro.generator} />
    <title>Elelis page - portafolio</title>
  </head>

  <body>
    <Header />
    <div id="index">
      <Background />
      <slot />

      <Footer />
    </div>
    <GlobalStyles />
  </body>
</html>

<style>
  #index {
    width: 100%;
    height: 100dvh;
    scroll-behavior: smooth;
    overflow: auto;
  }
</style>
