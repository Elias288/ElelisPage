<style is:global>
  :root {
    --base: #0d141e;
    --light-base: #1a2432;
    --background-color: linear-gradient(var(--base) 0%, var(--light-base) 100%);
    --primary: #00bfa6; /* verde agua */
    --secondary: #5bc0f8; /* azul claro */
    --text: #eaeaea;
    --muted: #b0b0b0;
    --header-height: 75px;

    --bg: rgba(11, 18, 32, 0.85);
    --fg: #e5e7eb;
    --muted: #94a3b8;
    --card: #0f172a;
    --ring: #1f2937;
    --accent: #818cf8;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Segoe UI", sans-serif;
  }

  html {
    background-color: var(--light-base);
  }

  body {
    color: var(--text);
    line-height: 1.6;
    min-width: 360px;

    height: 100vh;
    background: var(--background-color);
    overflow-y: hidden;
  }

  .hidden {
    display: none;
  }

  section {
    padding-top: 110px;
    padding-inline: 1em;
    padding-bottom: 300px;
    min-height: 100dvh;
    contain: paint; /* Evita el scrolleo en el componente */
  }
  .section__container {
    max-width: 1100px;
    margin: 0 auto;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--secondary);
  }

  p {
    margin-bottom: 1rem;
  }

  .bottom_appear {
    animation: bottom_appear 5s linear;
    animation-timeline: view();
    animation-range: entry 0% cover 30%;
  }
  .right_appear {
    animation: right_appear 5s linear;
    animation-timeline: view();
    animation-range: entry 0% cover 30%;
  }

  /** ----------------------- Animaciones ----------------------- */
  @keyframes right_appear {
    from {
      opacity: 0;
      transform: translateX(100%);
    }
    to {
      opacity: 1;
      transform: translateX(0px);
    }
  }

  @keyframes left_appear {
    from {
      opacity: 0;
      transform: translateX(-100%);
    }
    to {
      opacity: 1;
      transform: translateX(0px);
    }
  }

  @keyframes bottom_appear {
    from {
      opacity: 0;
      transform: translateY(100dvh);
    }
    to {
      opacity: 1;
      transform: translateY(0px);
    }
  }

  @keyframes shake_vertical {
    0%,
    100% {
      transform: translateY(0);
    }

    10%,
    30%,
    50%,
    70% {
      transform: translateY(-4px);
    }

    20%,
    40%,
    60% {
      transform: translateY(4px);
    }

    80% {
      transform: translateY(2.4px);
    }

    90% {
      transform: translateY(-2.4px);
    }
  }

  @keyframes shake {
    0% {
      margin-left: 0rem;
    }
    25% {
      margin-left: 0.3rem;
    }
    75% {
      margin-left: -0.3rem;
    }
    100% {
      margin-left: 0rem;
    }
  }
</style>
