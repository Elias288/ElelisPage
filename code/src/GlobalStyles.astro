<style is:global>
  :root {
    color-scheme: light dark;

    /* Inmutables */
    --min-width: 360px;
    --header-height: 75px;

    /* Mutables */
    /* Default: dark */
    --base: #0d141e;
    --light-base: #1a2432;
    --background-color: linear-gradient(var(--base) 0%, var(--light-base) 100%);
    --primary: #00bfa6; /* verde agua */
    --secondary: #5bc0f8; /* azul claro */
    --text: #eaeaea;
    --muted: #b0b0b0;

    --bg: rgba(11, 18, 32, 0.85);
    --fg: #ffffff1a;
    --muted: #94a3b8;
    --card: #0f172a;
    --ring: #1f2937;
    --accent: #818cf8;

    --card-bg: rgba(255, 255, 255, 0.05);
    --card-bg-hover: rgba(91, 192, 248, 0.15);
    --card-text-hover: #4db6ff;
    --card-ln: rgba(255, 255, 255, 0.25);

    --bubble-bg: rgba(255, 255, 255, 0.03);
  }

  /* ------------------------- Temas --------------------------- */
  :root[data-theme="dark"] {
    --base: #0d141e;
    --light-base: #1a2432;
    --background-color: linear-gradient(var(--base) 0%, var(--light-base) 100%);
    --primary: #00bfa6; /* verde agua */
    --secondary: #5bc0f8; /* azul claro */
    --text: #eaeaea;
    --muted: #b0b0b0;

    --bg: rgba(11, 18, 32, 0.85);
    --fg: #ffffff1a;
    --muted: #94a3b8;
    --card: #0f172a;
    --ring: #1f2937;
    --accent: #818cf8;

    --card-bg: rgba(255, 255, 255, 0.05);
    --card-bg-hover: rgba(91, 192, 248, 0.15);
    --card-text-hover: #4db6ff;
    --card-ln: rgba(255, 255, 255, 0.25);

    --bubble-bg: rgba(255, 255, 255, 0.03);
  }

  :root[data-theme="light"] {
    --base: #f5f7fa;
    --light-base: #ffffff;
    --background-color: linear-gradient(var(--base) 0%, var(--light-base) 100%);

    --primary: #00bfa6; /* verde agua (mantiene contraste en claro) */
    --secondary: #0077cc; /* azul m√°s intenso para destacar sobre fondo claro */
    --text: #1a1a1a;
    --muted: #606060;

    --bg: rgba(255, 255, 255, 0.9);
    --fg: #0000000d;
    --card: #f0f4f8;
    --ring: #d0d7e2;
    --accent: #4f46e5; /* morado fuerte para resaltar en claro */

    --card-bg: rgba(146, 146, 146, 0.267);
    --card-bg-hover: rgba(0, 119, 204, 0.1);
    --card-text-hover: rgb(0, 95, 163);
    --card-ln: rgba(0, 0, 0, 0.144);

    --bubble-bg: rgba(0, 80, 192, 0.129);
  }
  /* ------------------------------------------------------------ */

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Segoe UI", sans-serif;
  }

  html {
    background-color: var(--light-base);
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  body {
    color: var(--text);
    line-height: 1.6;
    min-width: var(--min-width);

    height: 100vh;
    background: var(--background-color);
    overflow-y: hidden;
    transition:
      background 0.3s,
      color 0.3s;
  }

  .hidden {
    display: none;
  }

  section {
    padding-top: 110px;
    padding-inline: 1em;
    padding-bottom: 300px;
    min-height: 100dvh;
    contain: paint; /* Evita el scrolleo en el componente */
  }
  .section__container {
    max-width: 1100px;
    margin: 0 auto;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--secondary);
  }

  p {
    margin-bottom: 1rem;
  }

  .bottom_appear {
    animation: bottom_appear 5s linear;
    animation-timeline: view();
    animation-range: entry 0% cover 30%;
  }
  .right_appear {
    animation: right_appear 5s linear;
    animation-timeline: view();
    animation-range: entry 0% cover 30%;
  }

  /** ----------------------- Animaciones ----------------------- */
  @keyframes right_appear {
    from {
      opacity: 0;
      transform: translateX(100%);
    }
    to {
      opacity: 1;
      transform: translateX(0px);
    }
  }

  @keyframes left_appear {
    from {
      opacity: 0;
      transform: translateX(-100%);
    }
    to {
      opacity: 1;
      transform: translateX(0px);
    }
  }

  @keyframes bottom_appear {
    from {
      opacity: 0;
      transform: translateY(100dvh);
    }
    to {
      opacity: 1;
      transform: translateY(0px);
    }
  }

  @keyframes shake_vertical {
    0%,
    100% {
      transform: translateY(0);
    }

    10%,
    30%,
    50%,
    70% {
      transform: translateY(-4px);
    }

    20%,
    40%,
    60% {
      transform: translateY(4px);
    }

    80% {
      transform: translateY(2.4px);
    }

    90% {
      transform: translateY(-2.4px);
    }
  }

  @keyframes shake {
    0% {
      margin-left: 0rem;
    }
    25% {
      margin-left: 0.3rem;
    }
    75% {
      margin-left: -0.3rem;
    }
    100% {
      margin-left: 0rem;
    }
  }
</style>
